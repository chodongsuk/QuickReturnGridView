<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.jimytc.quickreturngridview.MainActivity$PlaceholderFragment" >

    <tw.jimytc.quickreturngridview.QuickReturnGridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="@integer/gridview_column"
        android:gravity="center"
        android:listSelector="@android:color/transparent"
        android:paddingTop="@dimen/sticky_header_height"
        android:clipToPadding="false"
        android:fadingEdge="none" />

    <LinearLayout
        android:id="@+id/sticky"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sticky_header_height"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/white" >
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/sticky" />
    </LinearLayout>

</FrameLayout>
